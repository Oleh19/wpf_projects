<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Shop">
    <Style x:Key="font1">
        <Setter Property="Control.FontFamily" Value="Comic Sans MS"/>
        <Setter Property="Control.FontSize" Value="15"/>
        <Setter Property="Control.FontWeight" Value="Bold"/>
    </Style>
    <Style TargetType="Label" BasedOn="{StaticResource font1}">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <!--<Setter Property="Foreground" Value="{StaticResource brush1}"/>-->
    </Style>
    <Style TargetType="Menu" BasedOn="{StaticResource font1}">
        <!--<Setter Property="Foreground" Value="{StaticResource brush1}"/>-->
    </Style>
    <Style TargetType="Button" BasedOn="{StaticResource font1}">
        <!--<Setter Property="Foreground" Value="{StaticResource brush1}"/>-->
    </Style>
    <Style TargetType="ComboBox" BasedOn="{StaticResource font1}">
    </Style>
    <Style TargetType="TextBox" BasedOn="{StaticResource font1}">
        <Setter Property="Margin" Value="40 0 40 0"/>
        <!--<Setter Property="FontSize" Value="20"/>-->
    </Style>
    <Style TargetType="ListView" BasedOn="{StaticResource font1}"/>
</ResourceDictionary>