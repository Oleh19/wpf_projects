<Window x:Class="Shop.RemovingGoodWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shop"
        mc:Ignorable="d"
        Title="RemovingGoodWindow" Height="300" Width="300">
    <StackPanel Width="200" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Content="Removing good" Style="{StaticResource font1}" FontSize="18"  HorizontalAlignment="Center"/>
        <Label Content="Input the id:" Style="{StaticResource font1}" HorizontalAlignment="Center"/>
        <TextBox x:Name="name" Style="{StaticResource font1}"/>
        <Button Content="Remove good" Style="{StaticResource font1}" Click="Button_Click" Margin="0 10"/>
    </StackPanel>
</Window>
