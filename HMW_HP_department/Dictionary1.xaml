<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:HMW_HP_department">
    <Style x:Key="font1">
        <Setter Property="Control.FontFamily" Value="Comic Sans MS"/>
        <Setter Property="Control.FontSize" Value="14"/>
        <Setter Property="Control.FontWeight" Value="Bold"/>
        <Setter Property="Control.Foreground" Value="DodgerBlue"/>
        <Setter Property="Control.Background" Value="LightGreen"/>
    </Style>
    <Style TargetType="Label" BasedOn="{StaticResource font1}">
    </Style>
    <Style TargetType="TextBox" BasedOn="{StaticResource font1}">
        <Setter Property="Background" Value="AntiqueWhite"/>
    </Style>
    <Style TargetType="ListBox" BasedOn="{StaticResource font1}">
        <Setter Property="Background" Value="AntiqueWhite"/>
    </Style>
    <Style TargetType="ComboBox" BasedOn="{StaticResource font1}">
    </Style>
    <Style TargetType="GroupBox" BasedOn="{StaticResource font1}">
    </Style>
    <Style TargetType="Button" BasedOn="{StaticResource font1}">
    </Style>
</ResourceDictionary>